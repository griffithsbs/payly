{
    "extends": "airbnb",
    "plugins": [
        "react",
        "jsx-a11y",
        "import"
    ],
    "rules": {
        "indent": [
            "warn", 4
        ],
        "linebreak-style": "off",

        "semi": [ "warn", "always", { "omitLastInOneLineBlock": true } ],

        "comma-dangle": "off",
        "no-underscore-dangle": "off",
        "arrow-parens": "off",

        "react/sort-comp": "off"
    }
}