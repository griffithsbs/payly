{
    "extends": "airbnb",
    "plugins": [
        "react",
        "jsx-a11y",
        "import"
    ],
    "rules": {
        "indent": [
            "warn", 4
        ],
        "linebreak-style": "off",
        "keyword-spacing": "off",

        "semi": [ "warn", "always", { "omitLastInOneLineBlock": true } ],

        "comma-dangle": "off",
        "no-underscore-dangle": "off",
        "arrow-parens": "off",
        "no-multiple-empty-lines": ["warn"],
        "no-trailing-spaces": ["warn"],
        "no-unused-vars": ["warn"],
        "no-unused-expressions": ["warn"],
        "quotes": ["warn"],

        "react/sort-comp": "off"
    }
}